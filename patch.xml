<project name="oy-lm-1.4-unix2" default="dist" basedir=".">
    <property name="version" value="oy-lm-1.4"/>
    <target name="dist">
        <unzip src="lib/${version}.zip" dest="."/>
        <!-- public static final boolean IS_LINUX = OS_NAME.startsWith("Linux");  to public static final boolean IS_LINUX = !OS_NAME.startsWith("Windows"); -->
        <replace file="${version}/src/com/oy/shared/lm/out/DOTtoGIF.java" token="Linux" value="Windows"/> 
        <replace file="${version}/src/com/oy/shared/lm/out/DOTtoGIF.java" token="OS_NAME.startsWith" value="!OS_NAME.startsWith"/>  
        <copy file="lib/hibernate3.jar" todir="${version}/lib"/>
        <ant antfile="build.xml" target="dist" dir="${version}"/>
        <copy file="${version}/dist/lib/${version}.jar" tofile="${ant.project.name}.jar"/>
    </target>
</project>
